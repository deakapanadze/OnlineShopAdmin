@using OnlineShop.Models

@model Newproduct

<h2>Create a New Product</h2>

<form action="/Home/CreateNewProduct" method="post">
    <div>
        <label for="Name"> Name: </label>
        <input type="text" name="Name" id="Name" value="Sample Name" />
    </div>

    <div>
        <label for="ProductNumber"> Product Number: </label>
        <input type="text" name="ProductNumber" id="ProductNumber" value="ProductNo " />
    </div>

    <div>
        <label for="Color"> Color: </label>
        <input type="text" name="Color" value="@Model.Color" />
    </div>

    <div>
        <label for="StandardCost">Standard Cost: </label>
        <input type="text" name="StandardCost" value="@Model.StandardCost" />
    </div>

    <div>
        <label for="ListPrice"> List Price: </label>

        <input type="text" name="ListPrice" value="@Model.ListPrice" />
    </div>

    <div>
        <label for="Category"> Category: </label>
        <input type="text" name="Category" value="@Model.Category" />
    </div>

    <div>
        <label for="Count"> How Many? </label>
        <input type="text" name="Count" value="1"/>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create The Product" class="btn btn-default" />
        </div>
    </div>

</form>

@if(Model.Error != null)
{
    <div class="danger">
        @Model.Error
    </div>
}

<style>
    form label
    {
        width: 200px;
    }
</style>

<hr />
<div>
    <a href="/Home/Index">Back to Products Page</a>
</div>







